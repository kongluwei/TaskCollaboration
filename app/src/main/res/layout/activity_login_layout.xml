<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_login"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:background="@mipmap/logo"

        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="35dp"
        android:textColor="#fff"
        />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:background="@drawable/shape_square_label_edittext_bg"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/login_icon_user"
            />
        <EditText
            android:paddingLeft="5dp"
            android:id="@+id/tv_username"
            android:layout_marginLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_square_label_edittext"
            android:lines="1"
            android:inputType="text"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/login_icon_lock"
            />
        <EditText
            android:lines="1"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:id="@+id/tv_pwawrod"
            android:layout_marginLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_square_label_edittext"
            android:password="true"
            />

    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox

            android:id="@+id/cb_remember"
            android:layout_marginRight="170dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_login"
        android:layout_marginTop="20dp"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:text="登录"
        android:textSize="13dp"
        android:gravity="center"
        android:textColor="#fff"
        android:background="@drawable/shape_small_label_signin_"
        />

</LinearLayout>
